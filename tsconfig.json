{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": [
      "node",
      "mocha"
    ],
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": "."
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts",
    "./test",
    "next-env.d.ts",
    "src/**/*"
  ]
}
